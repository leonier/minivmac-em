ObjFiles = \
	bld/MINEM68K.o \
	bld/OSGLUSDL.o \
	bld/GLOBGLUE.o \
	bld/M68KITAB.o \
	bld/VIAEMDEV.o \
	bld/VIA2EMDV.o \

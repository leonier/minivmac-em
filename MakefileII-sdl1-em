$(TARGET) : $(ObjFiles)
	$(CC) \
		-o "$(TARGET)" \
		$(ObjFiles) $(LIBS)
		
clean :
	rm -f $(ObjFiles)
	rm -f "$(TARGET)"

html: $(TARGET)
ifeq ($(PRELOAD), 1)
	$(CC) -O3 -s USE_SDL=1 -s WASM=$(WASM) -s TOTAL_MEMORY=$(EMSCRIPTEN_TOTAL_MEMORY)  -s EMTERPRETIFY=1 -s EMTERPRETIFY_ASYNC=1 \
	-s EMTERPRETIFY_WHITELIST=@em.txt $(TARGET) --memory-init-file 0 \
	--preload-file $(PREFILE) -o $(basename $(TARGET)).html 
else
	$(CC) -O3 -s USE_SDL=1 -s WASM=$(WASM) -s TOTAL_MEMORY=$(EMSCRIPTEN_TOTAL_MEMORY)  -s EMTERPRETIFY=1 -s EMTERPRETIFY_ASYNC=1 \
	-s EMTERPRETIFY_WHITELIST=@em.txt $(TARGET) --memory-init-file 0  -o $(basename $(TARGET)).html 
endif
	